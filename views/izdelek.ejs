




<!DOCTYPE html>
<html lang="sl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mleko Pomursko</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #4a90e2, #7b68ee);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            color: black;
            background: transparent;
            max-width: 100vw;
        }

        .header {
            text-align: center;
            padding: 40px 20px;
        }

        .product-title {
            font-size: 1.8rem;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .product-price {
            font-size: 3rem;
            font-weight: bold;
            color: #ffd700;
        }

        .image-section {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 30px;
        }

        .product-image {
               max-height: 40%;
                text-align: center;
            max-width: 70vw;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        .info-section {
            padding: 30px 20px;
            backdrop-filter: blur(10px);
        }

        .info-title {
            font-size: 1.3rem;
            font-weight: bold;
            margin-bottom: 20px;
            text-align: center;
        }

        .info-item {
            margin-bottom: 15px;
            padding: 15px;
            border-radius: 10px;
            font-size: 1rem;
            line-height: 1.4;
        }

        .info-label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        @media (max-width: 480px) {
            .product-title {
                font-size: 1.5rem;
            }
            
            .product-price {
                font-size: 2.5rem;
            }
            
            .product-image {
                max-height: 40%;
                text-align: center;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <h1 class="product-title"> <p><%= data.name || data.name2 %></p></h1>
        <div class="product-price"><%= data.price %> €</div>
    </div>
    
    <div class="image-section">
        <img src="<%= data.imageSrc %>" alt="Izdelek" class="product-image">
    </div>
    
<% 
if (data.data) {
const raw = data.data;

const energija = raw.match(/Energijskavrednost([\d\/kJkcal\s]+)/)?.[1]?.trim();
const mascobe = raw.match(/Maščobe([\d\.]+)g/)?.[1];
const mascobeNasicene = raw.match(/nasičenemaščobe([\d\.]+)g/)?.[1];
const ogljikoviHidrati = raw.match(/Ogljikovihidrati([\d\.]+)g/)?.[1];
const sladkorji = raw.match(/sladkorji([\d\.]+)g/)?.[1];
const beljakovine = raw.match(/Beljakovine([\d\.]+)g/)?.[1];
const sol = raw.match(/Sol([\d\.]+)g/)?.[1];
%>

<div class="info-section">
    <h2 class="info-title">Prehranske vrednosti</h2>

    <% if (energija) { %>
    <div class="info-item">
        <span class="info-label">Hranilna vrednost</span>
        <%= energija %> (na 100g)
    </div>
    <% } %>

    <% if (mascobe) { %>
    <div class="info-item">
        <span class="info-label">Maščobe</span>
        <%= mascobe %>g (od tega nasičene <%= mascobeNasicene %>g)
    </div>
    <% } %>

    <% if (ogljikoviHidrati) { %>
    <div class="info-item">
        <span class="info-label">Ogljikovi hidrati</span>
        <%= ogljikoviHidrati %>g (od tega sladkorji <%= sladkorji %>g)
    </div>
    <% } %>

    <% if (beljakovine) { %>
    <div class="info-item">
        <span class="info-label">Beljakovine</span>
        <%= beljakovine %>g
    </div>
    <% } %>

    <% if (sol) { %>
    <div class="info-item">
        <span class="info-label">Sol</span>
        <%= sol %>g
    </div>
    <% }} %>
</div>

</body>
</html>

