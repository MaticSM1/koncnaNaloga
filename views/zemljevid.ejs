<!DOCTYPE html>
<html lang="sl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zemljevid - Koordinata 30, 30</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/leaflet.css" />
    <style>
        body {
            margin: 0;
            padding: 20px;
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        

        #map {
            height: 500px;
            margin: 20px;
            border-radius: 10px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }
  
    </style>
</head>
<body>

   
        
        <div id="map"></div>
        
   


    <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/leaflet.min.js"></script>
    <script>
        const map = L.map('map').setView([46.5574, 15.6413], 8);
        
        // Dodajanje satelitskih plasti
        const satelliteLayer = L.tileLayer('https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}', {
            attribution: '&copy; Esri, DigitalGlobe, GeoEye, Earthstar Geographics, USGS, ArcGIS',
            maxZoom: 18
        });
        
 
        const streetLayer = L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; OpenStreetMap contributors',
            maxZoom: 19
        });
        
        satelliteLayer.addTo(map);
        
        const baseLayers = {
            "Satelitski pogled": satelliteLayer,
            "Cestni zemljevid": streetLayer
        };
        
        L.control.layers(baseLayers).addTo(map);
        
        const marker = L.marker([46.5574, 15.6413], {
            icon: L.icon({
                iconUrl: 'data:image/svg+xml;base64,' + btoa(`
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="#e74c3c" width="30" height="30">
                        <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                    </svg>
                `),
                iconSize: [30, 30],
                iconAnchor: [15, 30],
                popupAnchor: [0, -30]
            })
        }).addTo(map);
        
        marker.bindPopup(`
            <div style="text-align: center; padding: 10px;">
                <h4 style="margin: 0 0 10px 0; color: #2c3e50;">Hofer</h4>

            </div>
        `);
        
        const circle = L.circle([46.5574, 15.6413], {
            color: '#e74c3c',
            fillColor: '#e74c3c',
            fillOpacity: 0.2,
            radius: 5000
        }).addTo(map);
        
        setTimeout(() => {
            marker.openPopup();
        }, 1000);
        
        map.on('click', function(e) {
            const lat = e.latlng.lat.toFixed(4);
            const lng = e.latlng.lng.toFixed(4);
            
            L.popup()
                .setLatLng(e.latlng)
                .setContent(`
                    <div style="text-align: center;">
                        <h4 style="margin: 0 0 5px 0;">Kliknjena lokacija</h4>
                        <p style="margin: 2px 0;">Širina: ${lat}°</p>
                        <p style="margin: 2px 0;">Dolžina: ${lng}°</p>
                    </div>
                `)
                .openOn(map);
        });
        
        L.control.scale({
            metric: true,
            imperial: false,
            position: 'bottomright'
        }).addTo(map);
    </script>
</body>
</html>